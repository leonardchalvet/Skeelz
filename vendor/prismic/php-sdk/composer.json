{
    "name": "prismic/php-sdk",
    "description": "PHP development kit for prismic.io",

    "autoload": {
        "psr-0": { "": "src/" }
    },

    "license": "Apache 2 license",

    "minimum-stability": "stable",

    "require": {
        "php": ">=5.5.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "phpdocumentor/phpdocumentor": "^2.3.1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
